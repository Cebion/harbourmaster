{
    "#info": {
        "version": 1,
        "name": "Default Dark Theme",
        "creator": "Tekkenfede and Kloptops"
    },

    "#base": {
        "font": "DejaVuSans.ttf",
        "font-scale[30:17]": 1.0,
        "font-scale[5:3]": 3.0,
        "font-scale[16:9]": 2.0,
        "font-scale[3:2]": 0.85,
        "font-scale[427:240]": 0.9
    },

    "#pallet": {
        "background": [ 85, 85, 85, 255 ],
        "background_fade": [50, 50, 50, 85],
        "list_text": [255, 255, 255, 255],
        "list_selected": [255, 0, 0, 255],
        "list_unselectable": [128, 0, 0, 255],
        "button": [200, 200, 200, 255]
    },

    "#resources": {
        "nine.png": {
            "button":  [  0,   0, 320, 167],
            "dialog":  [  0, 169, 320, 161],
            "box":     [  0, 332, 320, 106],
            "boxfill": [  0, 439, 320, 106],
            "arrow_r": [ 11, 559,  42,  42],
            "arrow_l": [ 11, 559,  42,  42, 1],
            "circle":  [ 64, 547,  62,  62],
            "bar":     [373, 225, 222,  18]
        },
        "buttons.png": {
            "_A":         [  0,   0, 180, 180],
            "_B":         [180,   0, 180, 180],
            "_X":         [360,   0, 180, 180],
            "_Y":         [540,   0, 180, 180],
            "_START":     [  0, 180, 360, 180],
            "_SELECT":    [360, 180, 360, 180],
            "_L":         [  0, 360, 270, 180],
            "_R":         [270, 360, 270, 180],
            "_UNCHECKED": [720,   0, 180, 180],
            "_CHECKED":   [900,   0, 180, 180],
            "_MORE":      [720, 180, 180, 180],
            "_LEFT":      [900, 180,  90, 180],
            "_RIGHT":     [990, 180,  90, 180],
            "_UP":        [900, 360, 180,  90],
            "_DOWN":      [900, 450, 180,  90]
        },
        "pointenfedde.png": {}
    },

    "#elements": {
        "left_pane": {
            "comment": "Left side of the screen.",
            "area": [ 0.0, 0.0, 0.3, 1.0 ],
            "area[3:2]": [ 0.0, 0.0, 0.4, 1.0 ],
            "area[wide]": [ 0.0, 0.0, 0.4, 1.0 ]
        },
        "right_pane": {
            "comment": "Right side of the screen.",
            "area": [ 0.3, 0.0, 1.0, 1.0 ],
            "area[3:2]": [ 0.4, 0.0, 1.0, 1.0 ],
            "area[wide]": [ 0.4, 0.0, 1.0, 1.0 ]
        },
        "port_info_list_area": {
            "comment": "List area",
            "parent": "left_pane",
            "area": [ 0.0, 0.0, 1.0, 1.0 ]
        },
        "port_info_area": {
            "comment": "The area used for the info text/image",
            "parent": "right_pane",
            "area": [ 0.0, 0.0, 1.0, 1.0 ]
        },
        "port_info_title_area": {
            "comment": "Port Title",
            "parent": "port_info_area",
            "area": [ 0.0, 0.0, 1.0, 0.1 ]
        },
        "port_info_image_area": {
            "comment": "Port image",
            "parent": "port_info_area",
            "area": [ 0.0, 0.1, 1.0, 0.4 ],
            "area[hires]": [ 0.0, 0.1, 1.0, 0.5 ],
            "area[4:3]": [ 0.0, 0.1, 1.0, 0.5 ]
        },
        "port_info_text_area": {
            "comment": "Port Info",
            "parent": "port_info_area",
            "area": [ 0.0, 0.4, 1.0, 1.0 ],
            "area[5:3, hires]": [ 0.0, 0.5, 1.0, 1.0 ]
        },
        "background": {
            "area": [ 0.0, 0.0, 1.0, 1.0 ],
            "fill": "background",
            "border": 8,
            "font-size": 36,
            "font-color": [ 0, 0, 0 ]
        },

        "button_bar": {
            "area": [ 0.60, 0.93, 0.95, 1.0 ],
            "font-size": 16,
            "font-color": [ 255, 255, 255 ],
            "align": "midright",
            "bar": [
                "_A",
                "Accept",
                "_B",
                "Back"
            ]
        },

        "option_list": {
            "area": [ 0.1, 0.25, 0.9, 0.9 ],
            "border": 8,
            "font-size": 30,
            "font-color": "list_text",
            "select-color": "list_selected",
            "text-clip": false,
            "thickness": 10
        }
    },

    "ports_list": {
        "#element:background": {},

        "port_info": {
            "parent": "port_info_area",
            "area": [ 0.0, 0.0, 1.0, 1.0 ],
            "fill": [ 110, 110, 110 ],
            "thickness": 10,
            "border": 8,
            "text": "",
            "font-size": 24,
            "font-color": [ 255, 255, 255 ],
            "text-wrap": true
        },

        "ports_list": {
            "parent": "port_info_list_area",
            "area": [ 0.0, 0.1, 1.0, 1.0 ],
            "border-x": 16,
            "font-size": 17,
            "font-size[427:240]": 22,
            "font-size[16:9]": 19,
            "font-size[5:3]": 27,
            "alt-fill": [ 53, 53, 53 ],
            "select-fill": [ 153, 180, 255 ],
            "font-color": "list_text",
            "select-color": "list_selected",
            "text-clip": true,
            "text-wrap": false,
            "autoscroll": "slide",
            "scroll-speed": 30,
            "scroll-delay-start": 500,
            "scroll-delay-end": 500
        },

        "port_filters": {
            "text": "{if:ports_list.filters}Filters: {ports_list.filters}\n{endif}Available Ports: {if:!ports_list.total_ports::ports_list.filter_ports}{ports_list.filter_ports} / {ports_list.total_ports}{else}{ports_list.total_ports}{endif}",
            "area": [ 0.0, 0.0, 0.4, 0.1 ],
            "area[4:3|30:17|3:2]": [ 0.0, 0.0, 0.3, 0.1 ],
            "font-size": 14,
            "parent": "background",
            "align": "topleft",
            "font-color": [ 153, 204, 255 ],
            "text-wrap": true,
            "autoscroll": "marquee",
            "scroll-speed": 40,
            "scroll-delay-start": 500,
            "scroll-delay-end": 500
        },

        "port_general_info": {
            "parent": "port_info_text_area",
            "area": [ 5, 5, -5, -5 ],
            "area[4:3]": [ 5, 60, -5, -5 ],
            "area[16:9]": [ 5, 80, -5, -5 ],
            "area[427:240]": [ 5, 80, -5, -5 ],
            "area[30:17]": [ 5, 80, -5, -5 ],
            "area[5:3]": [ 0.05, 0.0, 1.0, 0.8 ],
            "font-size": 16,
            "font-size[5:3]": 11,
            "font-size[16:9]": 11,
            "font-color": [ 255, 255, 255 ],
            "text-wrap": true,
            "text": "Genres: {port_info.genres}\nDownload Size: {port_info.download_size}{if:port_info.runtime}\nRuntime: {port_info.runtime} ({port_info.runtime_status}){endif}"
        },

        "port_desc": {
            "parent": "port_info_text_area",
            "area": [ 5, 65, -5, -45 ],
            "area[4:3]": [ 5, 118, -5, -50 ],
            "area[3:2]": [ 5, 65, -5, -13 ],
            "area[16:9]": [ 5, 165, -5, -100 ],
            "area[5:3]": [ 0.05, 0.2, 0.8, 0.7 ],
            "area[427:240]": [ 5, 145, -5, -50 ],
            "area[30:17]": [ 5, 145, -5, -65 ],
            "font-size": 17,
            "font-size[5:3]": 13,
            "font-size[16:9]": 13,
            "font-color": [ 255, 255, 255 ],
            "text-wrap": true,
            "autoscroll": "marquee",
            "scroll-speed": 60,
            "scroll-delay-start": 1500,
            "scroll-delay-end": 1500,
            "text": "{port_info.description}"
        },


        "port_title": {
            "parent": "port_info_title_area",
            "area": [ 0.0, 0.0, 1.0, 1.0 ],
            "text": "{port_info.title}",
            "font-size": 22,
            "font-color": [ 153, 204, 255 ],
            "align": "center"
        },

        "port_image": {
            "parent": "port_info_image_area",
            "area": [ 0.0, 0.0, 1.0, 1.0 ],
            "image": "no-image.jpg"
        },

        "#element:button_bar": {}
    },

    "port_info": {
        "#element:background": {},

        "port_info": {
            "area": [ 0.05, 0.68, 0.95, 0.9 ],
            "fill": [ 110, 110, 110 ],
            "text": "{port_info.description}",
            "thickness": 6,
            "border": 8,
            "autoscroll": "marquee",
            "scroll-speed": 60,
            "scroll-delay-start": 1500,
            "scroll-delay-end": 1500,
            "font-size": 15,
            "font-size[427:240]": 22,
            "font-color": [ 255, 255, 255 ],
            "text-wrap": true

        },

        "port_title": {
            "text": "{port_info.title}",
            "area": [ 0.00, 0.00, 1.00, 0.1 ],
            "font-size": 24,
            "font-color": [ 153, 204, 255 ],
            "autoscroll": null,
            "text-wrap": false,
            "align": "center"
        },

        "port_image": {
            "area": [ 0.0, 0.1, 0.65, 0.65 ],
            "image": "no-image.jpg",
            "align": "midcenter"
        },

        "port_info_instruction": {
            "area": [ 0.6, 0.1, 0.95, 0.65 ],
            "text": "Free Space: {system.free_space}\n\nPorter: {port_info.porter}\nGenres: {port_info.genres}\nDownload Size: {port_info.download_size}{if:port_info.runtime}\nRuntime: {port_info.runtime} ({port_info.runtime_status}){endif}\n\nInstruction: \nPlace file x in folder y then dance until tomorrow",
            "fill": [ 110, 110, 110 ],
            "thickness": 6,
            "border": 8,
            "font-size": 13,
            "font-color": [ 255, 255, 255 ],
            "text-wrap": true,
            "parent": "element:background"
        },

        "#element:button_bar": {}
    },

    "main_menu": {
        "#element:background": {},

        "#element:option_list": {
            "align": "center",
            "list": [],
            "options": [],
            "pointer": "pointenfedde.png",
            "pointer-align": [ "midleft", "midright" ],
            "pointer-size": [ 51, 26 ],
            "pointer-attach": "text",
            "pointer-offset": [ 0, 0 ],
            "pointer-flip-x": false,
            "pointer-flip-y": false,
            "pointer-mirror": true,
            "pointer-mirror-x": true
        },

        "system_time": {
            "text": "Time: {system.time_24hr}\nCFW: {system.cfw_name} ({system.cfw_version})\nDevice: {system.device_name}\nBattery: {system.battery_level}",
            "font-size": 13,
            "font-size[427:240]": 17,
            "font-color": [ 255, 255, 255 ],
            "area": [ 0.02, 0.05, 0.95, 0.95 ],
            "align": "topright"
        },
        "system_time_low": {
            "text": "PM: {system.portmaster_version}\nHM: {system.harbourmaster_version}\nSpace: {system.free_space} free / {system.total_space} total",
            "font-size": 12,
            "font-size[427:240]": 16,
            "font-color": [ 255, 255, 255 ],
            "area": [ 0.02, 0.05, 0.95, 0.95 ],
            "align": "bottomleft"
        },

        "#element:button_bar": {}
    },

    "option_menu": {
        "#element:background": {},

        "#element:option_list": {
            "list": [],
            "options": [],
            "align": "center",
            "no-select-color": "list_unselectable",
            "inactive-select-color": "list_unselectable"
        },

        "#element:button_bar": {},

        "ip": {
            "text": "IP: {system.ip_address}",
            "font-size": 11,
            "font-size[427:240]": 16,
            "font-color": [ 255, 255, 255 ],
            "area": [ 0.02, 0.05, 0.95, 0.95 ],
            "align": "bottomleft"
        }
    },

    "filter_list": {
        "#element:background": {
            "blend-mode": "blend",
            "fill": "background_fade"
        },
        "filter_list": {
            "area": [ 0.3, 0.00, 1.0, 1.0 ],
            "area[3:2]": [ 0.3, 0.02, 0.99, 1.0 ],
            "area[5:3]": [ 0.4, 0.00, 1.0, 1.0 ],
            "area[16:9]": [ 0.4, 0.00, 1.0, 1.0 ],
            "area[427:240]": [ 0.4, 0.00, 1.0, 1.0 ],
            "area[30:17]": [ 0.4, 0.00, 1.0, 1.0 ],
            "fill": [ 110, 110, 110 ],
            "font-size": 16,
            "font-size[5:3]": 15,
            "font-size[30:17]": 15,
            "font-color": "list_text",
            "select-color": "list_selected",
            "list": [],
            "align": "midleft"
        },
        "#element:button_bar": {}

    },

    "message_window": {
        "#element:background": {},

        "message_text": {
            "area": [ 0.05, 0.05, 0.95, 0.8 ],
            "fill": [ 110, 110, 110 ],
            "thickness": 6,
            "text-wrap": true,
            "border": 10,
            "font-size": 24,
            "font-color": [ 255, 255, 255 ],
            "align": "bottomleft",
            "text": ""
        },

        "progress_bar": {
            "area": [ 0.05, 0.83, 0.95, 0.90 ],
            "fill": [ 110, 110, 110 ],
            "progress-fill": [ 153, 204, 255 ],
            "text": "{system.progress_text}",
            "align": "midleft",
            "font-size": 14,
            "font-color": [ 255, 255, 255 ],
            "border": 2,
            "thickness": 1
        },

        "progress_bar_amount": {
            "area": [ 0.05, 0.83, 0.95, 0.90 ],
            "text": "{system.progress_amount}",
            "align": "midright",
            "font-size": 14,
            "font-color": [ 255, 255, 255 ],
            "thickness": 1,
            "border": 2
        },

        "#element:button_bar": {}
    },

    "on_screen_keyboard": {
        "#element:background": {},

        "keyboard": {
            "font-size": 30,
            "font-color": "list_text",
            "select-color": "list_selected",
            "inactive-select-color": "list_text",
            "area": [ 0.1, 0.4, 0.9, 1.0 ],
            "barwidth": 40,
            "list": [],
            "options": [],
            "align": "center"
        },

        "#element:button_bar": {}
    },

    "message_box": {
        "#element:background": {},

        "message_text": {
            "area": [ 0.05, 0.5, 0.95, 0.8 ],
            "fill": [ 110, 110, 110 ],
            "thickness": 6,
            "border": 8,
            "font-size": 24,
            "font-color": [ 255, 255, 255 ],
            "align": "center",
            "text": "",
            "text-wrap": true
        },

        "#element:button_bar": {}
    }
}